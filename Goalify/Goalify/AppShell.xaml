<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Goalify.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Goalify.Views"
       xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
       Shell.NavBarIsVisible="False">
    <Shell.Resources>
        <ResourceDictionary>
            <Style TargetType="TabBar">
                <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource Gray100}" />
                <Setter Property="Shell.TabBarForegroundColor" Value="CadetBlue" />
                <Setter Property="Shell.TabBarTitleColor" Value="#000000" />
                <Setter Property="Shell.TabBarDisabledColor" Value="#C0C0C0" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="#808080" />
            </Style>
        </ResourceDictionary>
    </Shell.Resources>


    <TabBar>
        <ShellContent Title="Home"
                      mi:MauiIcon.Value="{mi:Material Icon=Home, FontOverride=True}"
                     ContentTemplate="{DataTemplate views:HomePage}" />
        <ShellContent Title="Activities"
                      mi:MauiIcon.Value="{mi:FontAwesome Icon=RectangleList, FontOverride=True}"
                      ContentTemplate="{DataTemplate views:ActivitiesPage}" />
            <ShellContent Title="Dogs"
                      mi:MauiIcon.Value="{mi:FontAwesome Icon=User, FontOverride=False}"
                      ContentTemplate="{DataTemplate views:ProfilePage}" />
        </TabBar>
</Shell>
