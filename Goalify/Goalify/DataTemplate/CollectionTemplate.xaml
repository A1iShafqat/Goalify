<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Goalify.DataTemplate.CollectionTemplate"
            ColumnDefinitions=".2*,.4*,.2*,.2*"
            xmlns:viewModel="clr-namespace:Goalify.ViewModel;assembly=Goalify.ViewModel">
    <Grid.Triggers>
        <DataTrigger TargetType="Grid"
                     Binding="{Binding IsSelected}"
                        Value="true">
            <Setter Property="BackgroundColor" Value="Red"/> 
        </DataTrigger>
        <DataTrigger TargetType="Grid"
                     Binding="{Binding IsSelected}"
                        Value="false">
            <Setter Property="BackgroundColor" Value="White"/>
        </DataTrigger>
    </Grid.Triggers>

    <Label Text="{Binding Id}" Grid.Column="0"/>
    <Label Text="{Binding Name}" Grid.Column="1"/>
    <Label Text="{Binding StudentClass}" Grid.Column="2"/>
    <Button Text="Del" Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:MainPageViewModel}}, Path=DelStudentCommand}" 
            CommandParameter="{Binding .}" Grid.Column="3"/>

</Grid>
