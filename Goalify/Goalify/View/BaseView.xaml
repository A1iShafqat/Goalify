                <HorizontalStackLayout Grid.Row="0" BackgroundColor="#2196F3" Padding="10">
                    <BoxView WidthRequest="30" HeightRequest="30" Color="{StaticResource Gray300}" CornerRadius="15"/>
                    <Label Text="NavBar" FontSize="24" TextColor="White" HorizontalOptions="Center"/>
                </HorizontalStackLayout>
                <!-- Content -->
                <ContentPresenter Grid.Row="1"/>
                <!-- Footer -->
                <StackLayout Grid.Row="2" BackgroundColor="#2196F3" Padding="10">
