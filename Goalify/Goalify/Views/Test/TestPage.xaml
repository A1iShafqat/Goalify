<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Goalify.Views.Test.TestPage"
             xmlns:viewModel="clr-namespace:Goalify.ViewModels;assembly=Goalify.ViewModels"
             xmlns:models="clr-namespace:Goalify.ViewModels;assembly=Goalify.ViewModels"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:DataType="viewModel:TestViewModel">
    
    <Grid RowDefinitions="0.95*">
        <CollectionView ItemsSource="{Binding Icons}"
                            SelectionMode="Single"
                            RemainingItemsThreshold="10"
                            RemainingItemsThresholdReached="CollectionView_RemainingItemsThresholdReached"
                            ItemSizingStrategy="MeasureFirstItem"
                            VerticalScrollBarVisibility="Always">

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="5" VerticalItemSpacing="30"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:IconItem">
                    <Grid Padding="2" HorizontalOptions="Center" VerticalOptions="Center" RowDefinitions="50,4">
                        <Image WidthRequest="40" HeightRequest="40" Source="{Binding CachedImage}">
                            <!--<Image.Source>
                                <FontImageSource 
                                        Glyph="{mi:Material Icon={Binding Icon}, IconColor=black}" />
                            </Image.Source>-->
                        </Image>
                        <BoxView WidthRequest="50" Color="{StaticResource Gray400}" HeightRequest="2" Grid.Row="1"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
