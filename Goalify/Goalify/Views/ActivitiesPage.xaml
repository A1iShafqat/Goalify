<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Goalify.Views.ActivitiesPage"
             xmlns:viewModel="clr-namespace:Goalify.ViewModels;assembly=Goalify.ViewModels"
             x:DataType="viewModel:ActivityViewModel"
             Title="ActivitiesPage">
    <Grid RowDefinitions="*,auto"
        Padding="20">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Button Text="Add Activity"
                Command="{Binding NavigateToAddActivityCommand}"
                VerticalOptions="End"
                Grid.Row="1"/>
    </Grid>
</ContentPage>
